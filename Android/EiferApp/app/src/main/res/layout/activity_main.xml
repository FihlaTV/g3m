<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.eifer.eiferapp.MainActivity">

    <FrameLayout
        android:id="@+id/theSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <fragment
        android:name="org.eifer.eiferapp.GlobeFragment"
        android:id="@+id/theFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/pointCloudBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/pointCloudBarColor"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            android:text="Fill this!"
            android:id="@+id/pointCloudBarText"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/abortSimulation"
            android:id="@+id/pointCloudBarButton"
            android:onClick="stopPointCloudAnimationAction"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/positionFixerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@color/pointCloudBarColor"
        android:visibility="gone">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center"
            android:text="Fill this!"
            android:id="@+id/positionFixerText"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fixPosition"
            android:id="@+id/positionFixerButton"
            android:onClick="stopPositionFixerAction"/>

    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


</FrameLayout>


